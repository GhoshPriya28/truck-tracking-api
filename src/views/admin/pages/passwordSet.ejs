<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head-style'); %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
  <style>
    .password-set {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f5f5f5;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .password-set h4 {
      margin-top: 0;
      margin-bottom: 20px;
      font-size: 24px;
      text-align: center;
    }

    .password-set form {
      margin-bottom: 20px;
    }

    .password-set .form-group {
      margin-bottom: 20px;
    }

    .password-set label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .password-set input[type="email"],
    .password-set input[type="password"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    .password-set button[type="submit"] {
      background-color: #39d6b4;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
    }

    .password-set button[type="submit"]:hover {
      background-color: rgb(58, 247, 234);
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
  <script>
   $(document).ready(function() {
  // Submit form using AJAX
  $('form').submit(function(e) {
    e.preventDefault();
    var form = $(this);
    var url = form.attr('action');
    var data = form.serialize();

    $.ajax({
      type: 'POST',
      url: url,
      data: data,
      success: function(response) {
        // Display success message using SweetAlert
        Swal.fire({
          icon: 'success',
          title: 'Success',
          text: response.message,
          timer: 2000,
          showConfirmButton: false
        });

        // Clear form fields
        form.find('input[type="email"], input[type="password"]').val('');
      },
      error: function(xhr, status, error) {
        // Display error message using SweetAlert
        var errorMessage = xhr.responseJSON && xhr.responseJSON.message ? xhr.responseJSON.message : 'An error occurred.';
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: errorMessage,
          timer: 2000,
          showConfirmButton: false
        });
        
        // Clear form fields
        form.find('input[type="email"], input[type="password"]').val('');

        // Clear error message
        $('#error-message').text('').hide();
      }
    });
  });
});

  </script>
</head>
<body>
  <%- include('../partials/top-header'); %>
  <%- include('../partials/sidebar'); %>
  <div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6 col-sm-12">
            <div class="title">
              <h4>Password Set</h4>
            </div>
            <nav aria-label="breadcrumb" role="navigation">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="dashboard">Home</a></li>
                <li class="breadcrumb-item"><a href="userList">User List</a></li>
                <li class="breadcrumb-item active" aria-current="page">Password Set</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="password-set">
        <h4>Set Password</h4>
        <div id="error-message" style="display: none;"></div>
        <form action="/passwordSet" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-group">
            <label for="password">New Password</label>
            <input type="password" id="password" name="password" required>
          </div>
          <div class="form-group">
            <button type="submit">Set Password</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <%- include('../partials/footer'); %>
</body>
</html>
